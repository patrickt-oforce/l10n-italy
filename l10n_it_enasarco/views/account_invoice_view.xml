<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_invoice_enasarco_form">
        <field name="name">invoice.enasarco.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group/field[@name='reference']" position="after">
                <field name="enasarco"/>
            </xpath>
            <xpath expr="//group/group/field[@name='residual']" position="after">
                <label for="enasarco_date" string="Enasarco" colspan="2"
                       class="oe_left"
                       attrs="{'invisible': ['|',('enasarco', '!=', True),('enasarco_move_id', '!=', False)]}"/>
                <field name="enasarco_date" nolabel="1"
                       attrs="{'invisible': ['|',('enasarco', '!=', True),('enasarco_move_id', '!=', False)]}"/>
                <field name="enasarco_amount" nolabel="1"
                       class="oe_inline oe_right"
                       attrs="{'invisible': ['|',('enasarco', '!=', True),('enasarco_move_id', '!=', False)]}"/>
            </xpath>
            <xpath expr="//group/group/field[@name='move_id']" position="after">
                <field name="enasarco_move_id" class="oe_form_field"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_invoice_enasarco_wt_form">
        <field name="name">invoice.enasarco.wt.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="l10n_it_withholding_tax.view_withholding_invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='withholding_tax_amount']"
                   position="after">
                <field name="enasarco_amount_total" widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       attrs="{'invisible': ['|', ('state', '=', 'draft'), ('enasarco', '=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
